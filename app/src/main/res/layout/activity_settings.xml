<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Settings">

    <Spinner
        android:id="@+id/settingsPageSpinnerTeam"
        android:layout_width="246dp"
        android:layout_height="27dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/saveUsernameButton"
        app:layout_constraintEnd_toEndOf="@+id/usernameView"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/usernameView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/settings"
        android:textColor="@color/red_200"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveUsernameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:backgroundTint="@color/red_200"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/settingsPageSpinnerTeam"
        app:layout_constraintStart_toStartOf="@+id/settingsPageSpinnerTeam" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/usernameView"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:hint="@string/enter_username"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>